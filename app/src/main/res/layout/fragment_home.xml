<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Emergency Contact Number"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/etEmergencyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="please set emergency number by clicking -->"
                android:inputType="phone"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@android:drawable/ic_menu_save" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="CLICK TO TURN ON ACCIDENT DETECTION SERVICE"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="635dp" />

        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="#32fc00"
            android:elevation="16dp"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_power"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="662dp" />`

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="#ff0000"
            android:elevation="16dp"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_power"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="662dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>